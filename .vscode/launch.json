{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Temple: Python LSP Server",
      "type": "python",
      "request": "launch",
      "module": "temple_linter.lsp_server",
      "cwd": "${workspaceFolder}/temple-linter",
      "python": "${workspaceFolder}/.ci-venv/bin/python",
      "console": "integratedTerminal"
    },
    {
      "name": "Temple: VS Code Extension Host",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/vscode-temple-linter"
      ],
      "outFiles": [
        "${workspaceFolder}/vscode-temple-linter/dist/**/*.js"
      ]
    }
  ]
}
