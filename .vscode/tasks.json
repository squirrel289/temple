      "type": "shell",
      "command": "./scripts/pre-commit/build-docs.sh",
      "problemMatcher": []
    },
    {
      "label": "Temple: Linkcheck Docs",
      "type": "shell",
      "command": "./scripts/pre-commit/lint-docs.sh",
      "problemMatcher": []
    },
    {
